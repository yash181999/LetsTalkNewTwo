<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="right"
    android:padding="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginLeft="90dp"
        android:id="@+id/message_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@drawable/text_view_round"
        android:orientation="vertical"
        android:padding="3dp">


        <TextView
            android:id="@+id/msg_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"

            android:text="fgfdsgsdfjglk"
            android:textColor="@color/colorBlack"
            android:textSize="18sp">

        </TextView>

        <LinearLayout
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_marginRight="5dp"
                android:id="@+id/text_time"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="">

            </TextView>

            <ImageView
                android:id="@+id/msg_ticks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:src="@drawable/done_icon">

            </ImageView>


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:visibility="visible"
        android:background="@drawable/text_view_round"
        android:layout_marginLeft="90dp"
        android:layout_gravity="right"
        android:id="@+id/message_image_layout"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

       <LinearLayout
           android:padding="10dp"
           android:orientation="vertical"
           android:layout_width="wrap_content"
           android:layout_height="match_parent">

           <ImageView
               android:src="@drawable/dummyprofile"
               android:id="@+id/msg_image"
               android:layout_width="150dp"
               android:layout_height="150dp">
           </ImageView>

       </LinearLayout>

     <LinearLayout
         android:layout_gravity="right"
         android:orientation="horizontal"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content">
         <TextView
             android:layout_marginRight="5dp"
             android:layout_gravity="right"
             android:textColor="@color/colorGray"
             android:text=""
             android:id="@+id/image_time"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">

         </TextView>

        <ImageView
            android:id="@+id/img_ticks"
            android:src="@drawable/done_icon"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ImageView>



     </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/message_audio_layout"
        android:padding="3dp"
        android:background="@drawable/text_view_round"
        android:layout_gravity="left"
        android:gravity="right"
        android:orientation="vertical"
        android:layout_marginLeft="90dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:paddingTop="3dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <com.google.android.material.button.MaterialButton

                android:id="@+id/chat_audio_play"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:backgroundTint="@color/colorRed"
                android:gravity="center"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                app:icon="@drawable/play_icon"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:visibility="gone"
                android:id="@+id/chat_audio_pause"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:backgroundTint="@color/colorRed"
                android:gravity="center"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                app:icon="@drawable/pause_icon"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle">

            </com.google.android.material.button.MaterialButton>

            <SeekBar
                android:id="@+id/seek_bar"
                android:backgroundTint="@color/colorRed"
                android:progressTint="@color/colorRed"
                android:thumbTint="@color/colorRed"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </SeekBar>

        </LinearLayout>

       <LinearLayout
           android:orientation="horizontal"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

           <TextView
               android:layout_marginRight="5dp"
               android:id="@+id/audio_time"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text=""
               android:textColor="@color/colorBlack">

           </TextView>

        <ImageView
            android:id="@+id/audio_ticks"
            android:src="@drawable/done_icon"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ImageView>


       </LinearLayout>
    </LinearLayout>

</LinearLayout>